<% @title='ブログトップページ' %>
<h1><%= @title %></h1>
<h2>新着ブログ一覧</h2>
<% if current_user %>
    <%= link_to '記事を作成する', :new_article %>
<% end %>
<div>
    <table>
        <tr>
            <th>作成日</th>
            <th>タイトル</th>
            <th>作成者</th>
        </tr>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= link_to article.title, article_path(id: article) %></td>
                <td><%= link_to article.user.id, user_articles_path(user_id: article.user.id) %></td>
            </tr>
        <% end %>
    </table>
</div>