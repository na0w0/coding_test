<% @title='ブログトップページ' %>
<h1><%= @title %></h1>
<h2>新着ブログ一覧</h2>
<% if current_user %>
    <%= link_to '記事を作成する', new_user_article_url(current_user.id) %>
<% end %>
<div>
    <% if @articles.nil? %>
    <table>
        <tr>
            <th>作成日</th>
            <th>タイトル</th>
            <th>作成者</th>
        </tr>

        <% @articles.each do |article| %>
            <tr>
                <td><%= article.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= link_to article.title, user_article_path(id: article, user_id: article.user.id) %></td>
                <td><%= link_to article.user.id, user_articles_path(user_id: article.user.id) %></td>
            </tr>
        <% end %>
    </table>
    <% else %>
    <tr>
        <td>記事がありません</td>
    </tr>
    <% end %>
</div>