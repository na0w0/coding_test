<header class='blog-header'>
  <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
    <div class='container-fluid'>
      <%= link_to 'Blog', :root, class: 'navbar-brand' %>
      <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarLight' aria-controls='navbarLight' aria-expanded='false' aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarLight'>
        <ul class='navbar-nav' style='margin-left: auto'>
          <% if current_user %>
            <li class='nav-item'>
              <%= link_to 'マイページ', :mypage_index, class: 'nav-link' %>
            </li>
            <li class='nav-item'>
              <%= link_to '設定', :edit_user_registration, class: 'nav-link' %>
            </li>
            <li class='nav-item'>
              <%= link_to 'ログアウト', :destroy_user_session, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class='nav-item'>
              <%= link_to 'ログイン', :user_session, class: 'nav-link' %>
            </li>
            <li class='nav-item'>
              <%= link_to '新規登録', :new_user_registration, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <% flash.each do |name, msg| %>
    <div class='alert alert-<%= convert_flash_type(name) %>'>
      <%= msg.html_safe %>
    </div>
  <% end %>
</header>