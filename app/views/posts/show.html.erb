<% @title = @post.title %>
<h1><%= @title %></h1>

<div>
<%= @post.content %>
</div>

<h2>コメント</h2>
<table>
    <thead>
        <tr>
        <th>投稿者名</th>
        <th>コメント</th>
        </tr>
    </thead>
    <tbody>
        <% @comments.each do |comment| %>
        <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        </tr>
        <% end %>

<%= form_with model: [@post, @comment] do |f| %>
<%= f.text_field :content %>
<%= f.submit 'コメントする' %>
<% end %>