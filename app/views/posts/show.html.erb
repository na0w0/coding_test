<% @title = @post.title %>
<h1><%= @title %></h1>

<div>
<%= @post.content %>
</div>

<h2>コメント</h2>
<table>
    <thead>
        <tr>
        <th>投稿者名</th>
        <th>コメント</th>
        </tr>
    </thead>
    <tbody>
        <% @comments.each do |comment| %>
        <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <td><%= link_to '編集', edit_post_comment_path(id: comment, post_id: @post.id) %></td>
        <td><%= link_to '削除', post_comment_path(id: comment, post_id: @post.id), method: :delete, data: { confirm: 'コメントを削除しますか？' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= form_with model: [@post, @comment] do |f| %>
<%= f.text_field :content %>
<%= f.submit 'コメントする' %>
<% end %>