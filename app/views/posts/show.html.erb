<% @title = @post.title %>
<h1><%= @title %></h1>

<div>
<%= @post.content %>
</div>

<h2>コメント</h2>
<% @comments.each do |comment| %>
<%= comment.user.name %>
<%= comment.content %>
<% end %>

<%= form_with model: [current_user, @post, @comment] do |f| %>
<%= f.text_field :content %>
<%= f.submit 'コメントする' %>
<% end %>